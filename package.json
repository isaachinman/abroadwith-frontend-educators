{
  "name": "abroadwith-frontend-educators",
  "description": "A React/Redux isomorphic implementation for Abroadwith (2017).",
  "author": "Isaac Hinman <isaac@isaachinman.com> (github.com/isaachinman)",
  "license": "UNLICENSED",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/abroadwith/frontend-educators"
  },
  "main": "bin/server.js",
  "scripts": {
    "deploy": "better-npm-run deploy",
    "setup": "mkdir build && mkdir build/course-cities && mkdir build/course-data && npm i",
    "start-integration": "pm2 start ecosystem/integration.json",
    "start-production": "pm2 start ecosystem/production.json",
    "build": "better-npm-run build",
    "lint": "eslint src --fix",
    "start-dev": "better-npm-run start-dev",
    "watch-client": "better-npm-run watch-client",
    "dev": "concurrently --kill-others \"npm run watch-client\" \"npm run start-dev\"",
    "test": "karma start"
  },
  "betterScripts": {
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 4000,
        "IMG": "S3",
        "SOLR": "DEV",
        "APIHOST": "https://api.test-abroadwith.com",
        "APIPORT": 443
      }
    },
    "watch-client": {
      "command": "node config/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 4000,
        "IMG": "S3",
        "SOLR": "DEV",
        "APIHOST": "https://api.test-abroadwith.com",
        "APIPORT": 443
      }
    },
    "build": {
      "command": "webpack --json > build/stats.json --verbose --colors --display-error-details --config config/prod.config.js && rm -rf build/dist && mv build/dist-new build/dist",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "deploy": {
      "command": "bash ./config/scripts/deploy-edu-platform.sh",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "antd": "^2.6.3",
    "aws-sdk": "^2.7.15",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-display-name": "^6.3.13",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "body-parser": "^1.16.0",
    "cookie-parser": "^1.4.3",
    "debounce": "^1.0.0",
    "deep-is": "^0.1.3",
    "exif-parser": "^0.1.9",
    "express": "^4.13.3",
    "fade-props": "^1.0.0",
    "http-proxy": "^1.12.0",
    "invariant": "^2.2.2",
    "js-cookie": "^2.1.3",
    "jsonwebtoken": "^7.2.1",
    "jwt-decode": "^2.1.0",
    "less": "^2.5.3",
    "lwip": "0.0.9",
    "memory-cache": "^0.1.6",
    "moize": "^2.1.5",
    "moment": "^2.14.1",
    "moment-range": "^3.0.0",
    "multer": "^1.2.1",
    "piping": "^1.0.0-rc.3",
    "pretty-error": "^2.0.0",
    "radium": "^0.18.1",
    "react": "15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-addons-shallow-compare": "^15.4.2",
    "react-animations": "^0.1.0",
    "react-big-calendar": "^0.12.3",
    "react-bootstrap": "0.30.8",
    "react-bootstrap-typeahead": "^1.0.0-beta2",
    "react-dates": "6.1.0",
