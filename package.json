    "webpack-hot-middleware": "^2.13.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "globals": {
      "__DEVELOPMENT__": true,
      "__DEVTOOLS__": true,
      "__SERVER__": true,
      "__CLIENT__": true,
      "__DISABLE_SSR__": true
    },
    "env": {
      "browser": true
    },
    "rules": {
      "max-len": [
        2,
        300
      ],
      "new-cap": 0,
      "camelcase": 0,
      "array-callback-return": 0,
      "consistent-return": 0,
      "prefer-template": 0,
      "no-return-assign": 0,
      "react/jsx-filename-extension": 0,
      "arrow-body-style": 0,
      "react/require-extension": 0,
      "import/no-extraneous-dependencies": 0,
      "padded-blocks": 0,
      "import/no-unresolved": 0,
      "react/jsx-first-prop-new-line": [
        0,
        "never"
      ],
      "no-underscore-dangle": 0,
      "jsx-first-prop-new-line": 0,
      "no-console": 0,
      "radix": 0,
      "no-confusing-arrow": 0,
      "semi": [
        2,
        "never"
      ],
      "react/jsx-quotes": 0,
      "jsx-quotes": [
        2,
        "prefer-single"
      ],
      "react/prefer-stateless-function": 0
    }
  },
  "engines": {
    "node": "5.6.0"
  },
  "pre-push": [
    "lint"
  ]
}
